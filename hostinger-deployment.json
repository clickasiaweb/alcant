{
  "deployment": {
    "type": "nodejs",
    "node_version": "18",
    "startup_file": "server.js",
    "install_script": "npm install",
    "build_script": "npm run build",
    "start_script": "npm start"
  },
  "environment": {
    "NODE_ENV": "production",
    "PORT": "3000"
  },
  "hostinger": {
    "disable_php": true,
    "skip_composer": true,
    "application_type": "nodejs"
  },
  "directories": {
    "public": "frontend/out",
    "api": "backend"
  }
}
